      .spectacledcoder-mix-blend-mode-card {
        margin: auto;
        width: 150px;
        height: 150px;
        padding: 50px;
        background-color: white;
        mix-blend-mode: difference;
        background-image: linear-gradient(
          120deg,
          #000307 0%,
          rgb(180, 0, 78) 100%
        );
        border-radius: 39% 61% 55% 45% / 44% 37% 63% 56%;
        animation: fluid-anim 5s infinite linear;
        box-shadow: 1px 1px 20px rgb(138, 138, 138);
      }
      #mydiv {
        position: absolute;
        z-index: 10;
      }
      #mydiv:hover {
        cursor: grab;
      }

      @keyframes fluid-anim {
        0% {
          border-radius: 39% 61% 55% 45% / 44% 37% 63% 56%;
        }
        25% {
          border-radius: 45% 55% 48% 52% / 60% 36% 64% 40%;
        }
        50% {
          border-radius: 56% 44% 28% 72% / 46% 63% 37% 54%;
        }
        75% {
          border-radius: 62% 38% 37% 63% / 39% 32% 68% 61%;
        }
        100% {
          border-radius: 39% 61% 55% 45% / 44% 37% 63% 56%;
        }
      }
      @keyframes slide-anim {
        from {
          transform: translateX(0px);
        }
        to {
          transform: translateX(228px);
        }
      }
